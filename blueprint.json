{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/glitter-bomb-demo/",
	"preferredVersions": {
		"php": "8.2",
		"wp": "latest"
	},
	"steps": [
		{
			"step": "login",
			"username": "admin",
			"password": "password"
		},
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "wordpress.org/plugins",
				"slug": "glitter-bomb"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "runPHP",
			"code": "<?php require_once 'wordpress/wp-load.php'; wp_insert_post(['post_title' => 'Glitter Bomb Demo', 'post_name' => 'glitter-bomb-demo', 'post_content' => '<!-- wp:glitter-bomb/glitter-bomb {\"enabledByDefault\":true} /-->', 'post_status' => 'publish', 'post_type' => 'page']);"
		}
	]
}
